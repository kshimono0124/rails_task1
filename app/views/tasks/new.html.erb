<div class="information">
  <h2>スケジュール新規作成</h2>
</div>

<%= render "shared/error", obj: @task %>
<%= form_for @task do |f| %>
  <table>
    <tr>
      <th>
        <%= f.label :title ,"タイトル" %>
      </th>
      <td>
        <%= f.text_field :title %>
      </td>
    </tr>

    <tr>
      <th>
        <%= f.label :start_at ,"開始日" %>
      </th>
      <td>
        <%= f.date_field :start_at %>
      </td>
    </tr>

    <tr>
      <th>
        <%= f.label :end_at ,"終了日" %>
      </th>
      <td>
        <%= f.date_field :end_at %>
      </td>
    </tr>

    <tr>
      <th>
        <%= f.label :all_day ,"終日" %>
      </th>
      <td>
        <%= f.check_box :all_day, {}, checked_value = true, false %>
        <br>
        終日の場合はチェックを入れます
      </td>
    </tr>

    <tr>
      <th>
        <%= f.label :memo ,"スケジュールメモ" %>
      </th>
      <td>
        <%= f.text_area :memo, class: 'posts-content' %>
      </td>
    </tr>
  </table>

  <div>
    <ul>
      <li>
        <%= f.submit "登録完了する" %>
      </li>
      <li>
        <%= link_to "スケジュール情報一覧に戻る" , :tasks %>
      </li>
    </ul>
  </div>
  <% end %>