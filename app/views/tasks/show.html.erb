<div class="information">
  <h2>スケジュール詳細</h2>
</div>

<table>
  <tr>
    <th>タイトル</th>
    <td>
      <%= @task.title %>
    </td>
  </tr>
  <tr>
    <th>開始日</th>
    <td>
      <%= @task.start_at.strftime('%Y年%m月%d日') %>
    </td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td>
      <%= @task.end_at.strftime('%Y年%m月%d日') %>
    </td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @task.all_day == true %>
      ○
      <% else %>
      
      <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td>
      <%= @task.memo %>
    </td>
  </tr>
</table>

<div>
  <ul>
    <li>
      <%= link_to "スケジュール一覧に戻る" , :tasks %>
    </li>
    <li>
      <%= link_to "スケジュールを編集する" , :edit_task %>
    </li>
    <li>
      <%= link_to "スケジュールを削除", :task, method: :delete, data: { confirm: "本当に削除しますか？" } %>
    </li>
  </ul>
</div>